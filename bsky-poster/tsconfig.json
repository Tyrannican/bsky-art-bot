{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "strict": true
    },
    "include": ["./**/*"]
}
